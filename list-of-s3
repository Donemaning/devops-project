#!/bin/bash

# Run the AWS CLI command to list all IAM users
echo "Listing IAM Users:"
aws iam list-users --query 'Users[*].[UserName, UserId, Arn, CreateDate]' --output table

# Run the AWS CLI command to list all EC2 instances
echo "Listing EC2 instances:"
aws ec2 describe-instances --query 'Reservations[*].Instances[*].[InstanceId, InstanceType, State.Name, Placement.AvailabilityZone, PublicIpAddress, PrivateIpAddress]' --output table

# Run the AWS CLI command to list all security groups
echo "Listing Security Groups:"
aws ec2 describe-security-groups --query 'SecurityGroups[*].[GroupId, GroupName, VpcId]' --output table

# Run the AWS CLI command to list all load balancers
echo "Listing Load Balancers:"
aws elb describe-load-balancers --query 'LoadBalancerDescriptions[*].[LoadBalancerName, Scheme, VPCId]' --output table

# Run the AWS CLI command to list all target groups
echo "Listing Target Groups:"
aws elbv2 describe-target-groups --query 'TargetGroups[*].[TargetGroupName, TargetType, Protocol, Port]' --output table

# Run the AWS CLI command to list all S3 buckets
echo "Listing S3 Buckets:"
aws s3api list-buckets --query 'Buckets[*].[Name, CreationDate]' --output table

